
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/Countdown/FlipClock-master/src/flipclock/css/flipclock.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Countdown/FlipClock-master/compiled/flipclock.js"></script>

    <script>
        $(document).ready(function () {


            
            $('#clock').FlipClock(getSecondsTillDate('06-01'), {
                clockFace: 'DailyCounter',
                countdown: true
            });

            function getSecondsTillDate(date) {
                var t1 = new Date();
                var t2 = new Date(t1.getFullYear() + '-' + date);
                var dif = t1.getTime() - t2.getTime();
                var Seconds_from_T1_to_T2 = dif / 1000;
                var Seconds_Between_Dates = Math.abs(Seconds_from_T1_to_T2);
                return Seconds_Between_Dates;
            }


        });
    </script>

</head>
<body>
    <div> 
        <header>
            <h1>No More Genetics!!!</h1>
        </header>
        <br />
        <div id="clock"></div>
        <div class="your-clock"></div>
    </div>
</body>
</html>
